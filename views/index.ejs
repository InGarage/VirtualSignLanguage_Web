        <div class="input-group">
          <input type="text" class="form-control" name="data" id="data" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2" required>
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button>
          </div>
        </div>
      </form>
    </div>

      <div class="container">
      <div class="webgl-content">
        <div id="unityContainer" style="width: 960px; height: 450px"></div>
        <div class="footer">
          <div class="webgl-logo"></div>
          <div class="fullscreen" onclick="unityInstance.SetFullscreen(1)"></div>
          <div class="title">WebGL</div>
          <div onclick="unityInstance.SendMessage('TestInput','SetNumber',50)">test</div>
        </div>
      </div>
    </div>
    </div>
  </body>
